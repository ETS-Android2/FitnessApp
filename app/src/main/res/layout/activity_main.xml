<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a252b"
    tools:context=".MainActivity"


    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-190px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backgroundmain" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="308dp"
        android:layout_height="632dp"
        android:layout_marginTop="-250px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/walk_it_png" />

    <ImageView
        android:id="@+id/EmailContainer"
        android:layout_width="295dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        app:srcCompat="@drawable/rectangleshape" />

    <ImageView
        android:id="@+id/PasswordLoginContainer"
        android:layout_width="295dp"
        android:layout_height="83dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EmailContainer"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/rectangleshape" />

    <EditText
        android:id="@+id/EmailLogin"
        android:layout_width="283dp"
        android:layout_height="35dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/segoe_ui"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/EmailContainer"
        app:layout_constraintEnd_toEndOf="@+id/EmailContainer"
        app:layout_constraintStart_toStartOf="@+id/EmailContainer"
        app:layout_constraintTop_toTopOf="@+id/EmailContainer"
        app:layout_constraintVertical_bias="0.484" />

    <EditText
        android:id="@+id/PasswordLogin"
        android:layout_width="278dp"
        android:layout_height="51dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/segoe_ui"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/PasswordLoginContainer"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="@+id/PasswordLoginContainer"
        app:layout_constraintTop_toTopOf="@+id/PasswordLoginContainer"
        app:layout_constraintVertical_bias="0.193" />

    <TextView
        android:id="@+id/EmailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_bold"
        android:text="E-mail adress"
        android:textColor="#828282"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/EmailLogin"
        app:layout_constraintEnd_toEndOf="@+id/EmailLogin"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="@+id/EmailLogin"
        app:layout_constraintTop_toTopOf="@+id/EmailLogin"

        app:layout_constraintVertical_bias="0.529" />

    <TextView
        android:id="@+id/PassowrdTextViewLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_bold"
        android:text="Password"
        android:textColor="#828282"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/PasswordLogin"
        app:layout_constraintEnd_toEndOf="@+id/PasswordLoginContainer"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="@+id/PasswordLoginContainer"
        app:layout_constraintTop_toTopOf="@+id/PasswordLogin"
        app:layout_constraintVertical_bias="0.606" />

</androidx.constraintlayout.widget.ConstraintLayout>
